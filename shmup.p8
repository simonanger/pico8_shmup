pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
 --this will clear the screen
 cls(0)
 shipx=64
 shipy=64
 
 shipsx=0
 shipsy=0
 
 bulx=-10
 buly=-10
 
 boom=7
 boomx=-10
 boomy=-10
end

function _update()
 --controls
 shipsx=0
 shipsy=0
 
 if btn(0) then
  shipsx=-2
 end
 if btn(1) then
  shipsx=2
 end
 if btn(2) then
  shipsy=-2
 end
 if btn(3) then
  shipsy=2
 end
 if btnp(4) then
  boomx=shipx
  boomy=shipy-3
  sfx(1)
  boom=6
 end
 if btnp(5) then
  bulx=shipx
  buly=shipy-3
  sfx(0)
 end
 
 --moving the ship
 shipx=shipx+shipsx
 shipy=shipy+shipsy
 
 --move the bullet
 buly=buly-4
 boomy=boomy-4
 
 --changing boom
 if boom<9 then
 	boom=boom+1
 end
 if boom>8 then
  boom=6
 end
 --checking if we hit the edge
 if shipx>120 then
  shipx=0
 end
 if shipx<0 then
  shipx=120
 end
 
 if shipy>120 then
  shipy=0
 end
 if shipy<0 then
  shipy=120
 end
 
 
 
end

function _draw()
 cls(0)
  
 spr(1,shipx,shipy)
 
 spr(2,bulx,buly)
 spr(boom,boomx,boomy)
 
end
